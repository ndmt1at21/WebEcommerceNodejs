extends base

block content
  header.version_1
    .layer
    // Mobile menu overlay mask
    .main_header
      .container
        .row.small-gutters
          .col-xl-3.col-lg-3.d-lg-flex.align-items-center
            #logo
              a(href='index.html')
                img(src='img/logo.svg' alt='' width='100' height='35')
          nav.col-xl-6.col-lg-7
            a.open_close(href='javascript:void(0);')
              .hamburger.hamburger--spin
                .hamburger-box
                  .hamburger-inner
          .col-xl-3.col-lg-2.d-lg-flex.align-items-center.justify-content-end.text-right
            a.phone_top(href='tel://9438843343')
              strong
                span Need Help?
                | +94 423-23-221
        // /row
    // /main_header
    .main_nav.Sticky
      .container
        .row.small-gutters
          .col-xl-3.col-lg-3.col-md-3
            nav.categories
              ul.clearfix
                li
                  span
                    a(href='#')
                      span.hamburger.hamburger--spin
                        span.hamburger-box
                          span.hamburger-inner
                      | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Categories
                  #menu
                    ul
                      li
                        span
                          a(href='#0') Collections
                      li
                        span
                          a(href='#') Men
                      li
                        span
                          a(href='#') Women
                      li
                        span
                          a(href='#') Boys
                      li
                        span
                          a(href='#') Girls
                      li
                        span
                          a(href='#') Customize
          .col-xl-6.col-lg-7.col-md-6.d-none.d-md-block
            .custom-search-input
              input(type='text' placeholder='Search over 10.000 products')
              button(type='submit')
                i.header-icon_search_custom
          .col-xl-3.col-lg-2.col-md-3
            ul.top_tools
              li
                .dropdown.dropdown-cart
                  a.cart_bt(href='cart.html')
                    strong 2
                  .dropdown-menu
                    ul
                      li
                        a(href='product-detail.html')
                          figure
                            img.lazy(src='img/products/product_placeholder_square_small.jpg' data-src='img/products/shoes/thumb/1.jpg' alt='' width='50' height='50')
                          strong
                            span 1x Armor Air x Fear
                            | $90.00
                        a.action(href='#0')
                          i.ti-trash
                      li
                        a(href='product-detail.html')
                          figure
                            img.lazy(src='img/products/product_placeholder_square_small.jpg' data-src='img/products/shoes/thumb/2.jpg' alt='' width='50' height='50')
                          strong
                            span 1x Armor Okwahn II
                            | $110.00
                        a.action(href='0')
                          i.ti-trash
                    .total_drop
                      .clearfix
                        strong Total
                        span $200.00
                      a.btn_1.outline(href='cart.html') View Cart
                      a.btn_1(href='checkout.html') Checkout
                // /dropdown-cart
              li
                a.wishlist(href='#0')
                  span Wishlist
              li
                .dropdown.dropdown-access
                  a.access_link(href='account.html')
                    span Account
                  .dropdown-menu
                    a.btn_1(href='account.html') Sign In or Sign Up
                    ul
                      li
                        a(href='track-order.html')
                          i.ti-truck
                          | Track your Order
                      li
                        a(href='account.html')
                          i.ti-package
                          | My Orders
                      li
                        a(href='account.html')
                          i.ti-user
                          | My Profile
                      li
                        a(href='help.html')
                          i.ti-help-alt
                          | Help and Faq
                // /dropdown-access
        // /row
      .search_mob_wp
        input.form-control(type='text' placeholder='Search over 10.000 products')
        input.btn_1.full-width(type='submit' value='Search')
      // /search_mobile
    // /main_nav
  // /header
  main.bg_gray
    .container.margin_30
      .page_header
        .breadcrumbs
          ul
            li
              a(href='#') Home
            li
              a(href='#') Category
            li Page active
        h1 Sign In or Create an Account
      // /page_header
      .row.justify-content-center
        .col-xl-6.col-lg-6.col-md-8
          .box_account
            h3.client Already Client
            .form_container
              .row.no-gutters
                .col-lg-6.pr-lg-1
                  a.social_bt.facebook(href='#0') Login with Facebook
                .col-lg-6.pl-lg-1
                  a.social_bt.google(href='#0') Login with Google
              .divider
                span Or
              .form-group
                input#email.form-control(type='email' name='email' placeholder='Email*')
              .form-group
                input#password_in.form-control(type='password' name='password_in' value='' placeholder='Password*')
              .clearfix.add_bottom_15
                .checkboxes.float-left
                  label.container_check
                    | Remember me
                    input(type='checkbox')
                    span.checkmark
                .float-right
                  a#forgot(href='javascript:void(0);') Lost Password?
              .text-center
                input.btn_1.full-width(type='submit' value='Log In')
              #forgot_pw
                .form-group
                  input#email_forgot.form-control(type='email' name='email_forgot' placeholder='Type your email')
                p A new password will be sent shortly.
                .text-center
                  input.btn_1(type='submit' value='Reset Password')
            // /form_container
          // /box_account
          .row
            .col-md-6.d-none.d-lg-block
              ul.list_ok
                li Find Locations
                li Quality Location check
                li Data Protection
            .col-md-6.d-none.d-lg-block
              ul.list_ok
                li Secure Payments
                li H24 Support
          // /row
        .col-xl-6.col-lg-6.col-md-8
          .box_account
            h3.new_client New Client
            small.float-right.pt-2 * Required Fields
            .form_container
              .form-group
                input#email_2.form-control(type='email' name='email' placeholder='Email*')
              .form-group
                input#password_in_2.form-control(type='password' name='password_in_2' value='' placeholder='Password*')
              hr
              .private.box
                .row.no-gutters
                  .col-6.pr-1
                    .form-group
                      input.form-control(type='text' placeholder='Name*')
                  .col-6.pl-1
                    .form-group
                      input.form-control(type='text' placeholder='Last Name*')
                  .col-12
                    .form-group
                      input.form-control(type='text' placeholder='Full Address*')
                .row.no-gutters
                  .col-6.pl-1
                    .form-group
                      input.form-control(type='text' placeholder='Telephone *')
                // /row
              .text-center
                input.btn_1.full-width(type='submit' value='Register')