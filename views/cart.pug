extends base

block content
  header.version_1
    .layer
    // Mobile menu overlay mask
    .main_header
      .container
        .row.small-gutters
          .col-xl-3.col-lg-3.d-lg-flex.align-items-center
            #logo
              a(href='index.html')
                img(src='img/logo.svg' alt='' width='100' height='35')
          nav.col-xl-6.col-lg-7
            a.open_close(href='javascript:void(0);')
              .hamburger.hamburger--spin
                .hamburger-box
                  .hamburger-inner
          .col-xl-3.col-lg-2.d-lg-flex.align-items-center.justify-content-end.text-right
            a.phone_top(href='tel://9438843343')
              strong
                span Need Help?
                | +94 423-23-221
        // /row
    // /main_header
    .main_nav.Sticky
      .container
        .row.small-gutters
          .col-xl-3.col-lg-3.col-md-3
            nav.categories
              ul.clearfix
                li
                  span
                    a(href='#')
                      span.hamburger.hamburger--spin
                        span.hamburger-box
                          span.hamburger-inner
                      | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Categories
                  #menu
                    ul
                      li
                        span
                          a(href='#0') Collections
                      li
                        span
                          a(href='#') Men
                      li
                        span
                          a(href='#') Women
                      li
                        span
                          a(href='#') Boys
                      li
                        span
                          a(href='#') Girls
                      li
                        span
                          a(href='#') Customize
          .col-xl-6.col-lg-7.col-md-6.d-none.d-md-block
            .custom-search-input
              input(type='text' placeholder='Search over 10.000 products')
              button(type='submit')
                i.header-icon_search_custom
          .col-xl-3.col-lg-2.col-md-3
            ul.top_tools
              li
                .dropdown.dropdown-cart
                  a.cart_bt(href='cart.html')
                    strong 2
                  .dropdown-menu
                    ul
                      li
                        a(href='product-detail.html')
                          figure
                            img.lazy(src='img/products/product_placeholder_square_small.jpg' data-src='img/products/shoes/thumb/1.jpg' alt='' width='50' height='50')
                          strong
                            span 1x Armor Air x Fear
                            | $90.00
                        a.action(href='#0')
                          i.ti-trash
                      li
                        a(href='product-detail.html')
                          figure
                            img.lazy(src='img/products/product_placeholder_square_small.jpg' data-src='img/products/shoes/thumb/2.jpg' alt='' width='50' height='50')
                          strong
                            span 1x Armor Okwahn II
                            | $110.00
                        a.action(href='0')
                          i.ti-trash
                    .total_drop
                      .clearfix
                        strong Total
                        span $200.00
                      a.btn_1.outline(href='cart.html') View Cart
                      a.btn_1(href='checkout.html') Checkout
                // /dropdown-cart
              li
                a.wishlist(href='#0')
                  span Wishlist
              li
                .dropdown.dropdown-access
                  a.access_link(href='account.html')
                    span Account
                  .dropdown-menu
                    a.btn_1(href='account.html') Sign In or Sign Up
                    ul
                      li
                        a(href='track-order.html')
                          i.ti-truck
                          | Track your Order
                      li
                        a(href='account.html')
                          i.ti-package
                          | My Orders
                      li
                        a(href='account.html')
                          i.ti-user
                          | My Profile
                      li
                        a(href='help.html')
                          i.ti-help-alt
                          | Help and Faq
                // /dropdown-access
        // /row
      .search_mob_wp
        input.form-control(type='text' placeholder='Search over 10.000 products')
        input.btn_1.full-width(type='submit' value='Search')
      // /search_mobile
    // /main_nav
  // /header
  main.bg_gray
    .container.margin_30
      .page_header
        .breadcrumbs
          ul
            li
              a(href='#') Home
            li
              a(href='#') Category
            li Page active
        h1 Cart page
      // /page_header
      table.table.table-striped.cart-list
        thead
          tr
            th
              | Product
            th
              | Price
            th
              | Quantity
            th
              | Subtotal
            th
        tbody
          tr
            td
              .thumb_cart
                img.lazy(src='img/products/product_placeholder_square_small.jpg' data-src='img/products/shoes/1.jpg' alt='Image')
              span.item_cart Armor Air x Fear
            td
              strong $140.00
            td
              .numbers-row
                input#quantity_1.qty2(type='text' value='1' name='quantity_1')
                .inc.button_inc +
                .dec.button_inc -
            td
              strong $140.00
            td.options
              a(href='#')
                i.ti-trash
          tr
            td
              .thumb_cart
                img.lazy(src='img/products/product_placeholder_square_small.jpg' data-src='img/products/shoes/2.jpg' alt='Image')
              span.item_cart Armor Okwahn II
            td
              strong $110.00
            td
              .numbers-row
                input#quantity_2.qty2(type='text' value='1' name='quantity_2')
                .inc.button_inc +
                .dec.button_inc -
            td
              strong $110.00
            td.options
              a(href='#')
                i.ti-trash
          tr
            td
              .thumb_cart
                img.lazy(src='img/products/product_placeholder_square_small.jpg' data-src='img/products/shoes/3.jpg' alt='Image')
              span.item_cart Armor Air Wildwood ACG
            td
              strong $90.00
            td
              .numbers-row
                input#quantity_3.qty2(type='text' value='1' name='quantity_3')
                .inc.button_inc +
                .dec.button_inc -
            td
              strong $90.00
            td.options
              a(href='#')
                i.ti-trash
      .row.add_top_30.flex-sm-row-reverse.cart_actions
        .col-sm-4.text-right
          button.btn_1.gray(type='button') Update Cart
        .col-sm-8
          .apply-coupon
            .form-group.form-inline
              input.form-control(type='text' name='coupon-code' value='' placeholder='Promo code')
              button.btn_1.outline(type='button') Apply Coupon
      // /cart_actions
    // /container
    .box_cart
      .container
        .row.justify-content-end
          .col-xl-4.col-lg-4.col-md-6
            ul
              li
                span Subtotal
                |  $240.00
              li
                span Shipping
                |  $7.00
              li
                span Total
                |  $247.00
            a.btn_1.full-width.cart(href='cart-2.html') Proceed to Checkout