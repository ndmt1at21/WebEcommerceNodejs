extends base

block content
  header.version_1
    .layer
    // Mobile menu overlay mask
    .main_header
      .container
        .row.small-gutters
          .col-xl-3.col-lg-3.d-lg-flex.align-items-center
            #logo
              a(href='index.html')
                img(src='img/logo.svg' alt='' width='100' height='35')
          nav.col-xl-6.col-lg-7
            a.open_close(href='javascript:void(0);')
              .hamburger.hamburger--spin
                .hamburger-box
                  .hamburger-inner
          .col-xl-3.col-lg-2.d-lg-flex.align-items-center.justify-content-end.text-right
            a.phone_top(href='tel://9438843343')
              strong
                span Need Help?
                | +94 423-23-221
        // /row
    // /main_header
    .main_nav.Sticky
      .container
        .row.small-gutters
          .col-xl-3.col-lg-3.col-md-3
            nav.categories
              ul.clearfix
                li
                  span
                    a(href='#')
                      span.hamburger.hamburger--spin
                        span.hamburger-box
                          span.hamburger-inner
                      | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Categories
                  #menu
                    ul
                      li
                        span
                          a(href='#0') Collections
                      li
                        span
                          a(href='#') Men
                      li
                        span
                          a(href='#') Women
                      li
                        span
                          a(href='#') Boys
                      li
                        span
                          a(href='#') Girls
                      li
                        span
                          a(href='#') Customize
          .col-xl-6.col-lg-7.col-md-6.d-none.d-md-block
            .custom-search-input
              input(type='text' placeholder='Search over 10.000 products')
              button(type='submit')
                i.header-icon_search_custom
          .col-xl-3.col-lg-2.col-md-3
            ul.top_tools
              li
                .dropdown.dropdown-cart
                  a.cart_bt(href='cart.html')
                    strong 2
                  .dropdown-menu
                    ul
                      li
                        a(href='product-detail.html')
                          figure
                            img.lazy(src='img/products/product_placeholder_square_small.jpg' data-src='img/products/shoes/thumb/1.jpg' alt='' width='50' height='50')
                          strong
                            span 1x Armor Air x Fear
                            | $90.00
                        a.action(href='#0')
                          i.ti-trash
                      li
                        a(href='product-detail.html')
                          figure
                            img.lazy(src='img/products/product_placeholder_square_small.jpg' data-src='img/products/shoes/thumb/2.jpg' alt='' width='50' height='50')
                          strong
                            span 1x Armor Okwahn II
                            | $110.00
                        a.action(href='0')
                          i.ti-trash
                    .total_drop
                      .clearfix
                        strong Total
                        span $200.00
                      a.btn_1.outline(href='cart.html') View Cart
                      a.btn_1(href='checkout.html') Checkout
                // /dropdown-cart
              li
                a.wishlist(href='#0')
                  span Wishlist
              li
                .dropdown.dropdown-access
                  a.access_link(href='account.html')
                    span Account
                  .dropdown-menu
                    a.btn_1(href='account.html') Sign In or Sign Up
                    ul
                      li
                        a(href='track-order.html')
                          i.ti-truck
                          | Track your Order
                      li
                        a(href='account.html')
                          i.ti-package
                          | My Orders
                      li
                        a(href='account.html')
                          i.ti-user
                          | My Profile
                      li
                        a(href='help.html')
                          i.ti-help-alt
                          | Help and Faq
                // /dropdown-access
        // /row
      .search_mob_wp
        input.form-control(type='text' placeholder='Search over 10.000 products')
        input.btn_1.full-width(type='submit' value='Search')
      // /search_mobile
    // /main_nav
  // /header
  main.bg_gray
    .container.margin_30
      .page_header
        .breadcrumbs
          ul
            li
              a(href='#') Home
            li
              a(href='#') Category
            li Page active
        h1 Sign In or Create an Account
      // /page_header
      .row
        .col-lg-4.col-md-6
          .step.first
            h3 1. User Info and Billing address
            ul#tab_checkout.nav.nav-tabs(role='tablist')
              li.nav-item
                a#home-tab.nav-link.active(data-toggle='tab' href='#tab_1' role='tab' aria-controls='tab_1' aria-selected='true') Register
              li.nav-item
                a#profile-tab.nav-link(data-toggle='tab' href='#tab_2' role='tab' aria-controls='tab_2' aria-selected='false') Login
            .tab-content.checkout
              #tab_1.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='tab_1')
                .form-group
                  input.form-control(type='email' placeholder='Email')
                .form-group
                  input.form-control(type='password' placeholder='Password')
                hr
                .row.no-gutters
                  .col-6.form-group.pr-1
                    input.form-control(type='text' placeholder='Name')
                  .col-6.form-group.pl-1
                    input.form-control(type='text' placeholder='Last Name')
                // /row
                .form-group
                  input.form-control(type='text' placeholder='Full Address')
                .row.no-gutters
                  .col-6.form-group.pr-1
                    input.form-control(type='text' placeholder='City')
                  .col-6.form-group.pl-1
                    input.form-control(type='text' placeholder='Postal code')
                // /row
                .row.no-gutters
                  .col-md-12.form-group
                    .custom-select-form
                      select#country.wide.add_bottom_15(name='country')
                        option(value='' selected='') Country
                        option(value='Europe') Europe
                        option(value='United states') United states
                        option(value='Asia') Asia
                // /row
                .form-group
                  input.form-control(type='text' placeholder='Telephone')
                hr
                .form-group
                  label#other_addr.container_check
                    | Other billing address
                    input(type='checkbox')
                    span.checkmark
                #other_addr_c.pt-2
                  .row.no-gutters
                    .col-6.form-group.pr-1
                      input.form-control(type='text' placeholder='Name')
                    .col-6.form-group.pl-1
                      input.form-control(type='text' placeholder='Last Name')
                  // /row
                  .form-group
                    input.form-control(type='text' placeholder='Full Address')
                  .row.no-gutters
                    .col-6.form-group.pr-1
                      input.form-control(type='text' placeholder='City')
                    .col-6.form-group.pl-1
                      input.form-control(type='text' placeholder='Postal code')
                  // /row
                  .row.no-gutters
                    .col-md-12.form-group
                      .custom-select-form
                        select#country_2.wide.add_bottom_15(name='country')
                          option(value='' selected='') Country
                          option(value='Europe') Europe
                          option(value='United states') United states
                          option(value='Asia') Asia
                  // /row
                  .form-group
                    input.form-control(type='text' placeholder='Telephone')
                // /other_addr_c
                hr
              // /tab_1
              #tab_2.tab-pane.fade(role='tabpanel' aria-labelledby='tab_2')
                a.social_bt.facebook(href='#0') Login con Facebook
                a.social_bt.google(href='#0') Login con Google
                .form-group
                  input.form-control(type='email' placeholder='Email')
                .form-group
                  input#password_in.form-control(type='password' placeholder='Password' name='password_in')
                .clearfix.add_bottom_15
                  .checkboxes.float-left
                    label.container_check
                      | Remember me
                      input(type='checkbox')
                      span.checkmark
                  .float-right
                    a#forgot(href='#0') Lost Password?
                #forgot_pw
                  .form-group
                    input#email_forgot.form-control(type='email' name='email_forgot' placeholder='Type your email')
                  p A new password will be sent shortly.
                  .text-center
                    input.btn_1(type='submit' value='Reset Password')
                hr
                input.btn_1.full-width(type='submit' value='Login')
              // /tab_2
          // /step
        .col-lg-4.col-md-6
          .step.middle.payments
            h3 2. Payment and Shipping
            ul
              li
                label.container_radio
                  | Credit Card
                  a.info(href='#0' data-toggle='modal' data-target='#payments_method')
                  input(type='radio' name='payment' checked='')
                  span.checkmark
              li
                label.container_radio
                  | Paypal
                  a.info(href='#0' data-toggle='modal' data-target='#payments_method')
                  input(type='radio' name='payment')
                  span.checkmark
              li
                label.container_radio
                  | Cash on delivery
                  a.info(href='#0' data-toggle='modal' data-target='#payments_method')
                  input(type='radio' name='payment')
                  span.checkmark
              li
                label.container_radio
                  | Bank Transfer
                  a.info(href='#0' data-toggle='modal' data-target='#payments_method')
                  input(type='radio' name='payment')
                  span.checkmark
            .payment_info.d-none.d-sm-block
              figure
                img(src='img/cards_all.svg' alt='')
              p
                | Sensibus reformidans interpretaris sit ne, nec errem nostrum et, te nec meliore philosophia. At vix quidam periculis. Solet tritani ad pri, no iisque definitiones sea.
            h6.pb-2 Shipping Method
            ul
              li
                label.container_radio
                  | Standard shipping
                  a.info(href='#0' data-toggle='modal' data-target='#payments_method')
                  input(type='radio' name='shipping' checked='')
                  span.checkmark
              li
                label.container_radio
                  | Express shipping
                  a.info(href='#0' data-toggle='modal' data-target='#payments_method')
                  input(type='radio' name='shipping')
                  span.checkmark
          // /step
        .col-lg-4.col-md-6
          .step.last
            h3 3. Order Summary
            .box_general.summary
              ul
                li.clearfix
                  em 1x Armor Air X Fear
                  span $145.00
                li.clearfix
                  em 2x Armor Air Zoom Alpha
                  span $115.00
              ul
                li.clearfix
                  em
                    strong Subtotal
                  span $450.00
                li.clearfix
                  em
                    strong Shipping
                  span $0
              .total.clearfix
                | TOTAL 
                span $450.00
              .form-group
                label.container_check
                  | Register to the Newsletter.
                  input(type='checkbox' checked='')
                  span.checkmark
              a.btn_1.full-width(href='confirm.html') Confirm and Pay
script.
  // Other address Panel
  $('#other_addr input').on("change", function (){
  if(this.checked)
  $('#other_addr_c').fadeIn('fast');
  else
  $('#other_addr_c').fadeOut('fast');
  });
