header.version_1
    .layer
    // Mobile menu overlay mask
    .main_header
      .container
        .row.small-gutters
          .col-xl-3.col-lg-3.d-lg-flex.align-items-center
            #logo
              a(href='/')
                img(src='img/logo.png' alt='' width='100' height='35')
          nav.col-xl-6.col-lg-7
            a.open_close(href='javascript:void(0);')
              .hamburger.hamburger--spin
                .hamburger-box
                  .hamburger-inner
          .col-xl-3.col-lg-2.d-lg-flex.align-items-center.justify-content-end.text-right
            a.phone_top(href='tel://0907195314')
              strong
                span Need Help?
                | +0907 195 314
        // /row
    // /main_header
    .main_nav.Sticky
      .container
        .row.small-gutters
          .col-xl-3.col-lg-3.col-md-3
            nav.categories
              ul.clearfix
                li
                  span
                    a(href='/')
                      span.hamburger.hamburger--spin
                        span.hamburger-box
                          span.hamburger-inner
                      | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Categories
                  #menu
                    ul
                      each brand in brands 
                        li
                          span
                            a(href='#0')= `${brand.name}`.toUpperCase()

          .col-xl-6.col-lg-7.col-md-6.d-none.d-md-block
            .custom-search-input
              input(type='text' placeholder='Search over 10.000 products')
              button(type='submit')
                i.header-icon_search_custom
          .col-xl-3.col-lg-2.col-md-3
            ul.top_tools
              li
                .dropdown.dropdown-cart
                  a.cart_bt(href='/cart')
                    strong 2
                  .dropdown-menu
                    ul
                      li
                        a(href='product-detail.html')
                          figure
                            img.lazy(src='img/products/product_placeholder_square_small.jpg' data-src='img/products/shoes/thumb/1.jpg' alt='' width='50' height='50')
                          strong
                            span 1x Armor Air x Fear
                            | $90.00
                        a.action(href='#0')
                          i.ti-trash
            
                    .total_drop
                      .clearfix
                        strong Total
                        span $200.00
                      a.btn_1.outline(href='/cart') View Cart
                      a.btn_1(href='/checkout') Checkout
                // /dropdown-cart
              li
                .dropdown.dropdown-access
                  a.access_link(href='/account')
                    span Account
                  .dropdown-menu
                    if user
                      a.btn_1(href='/account')= `${user.name}`
                    else 
                      a.btn_1(href='/login') Sign In or Sign Up
                    
                    ul
                      li
                        a(href='/track-order')
                          i.ti-truck
                          | Track your Order
                      li
                        a(href='/account')
                          i.ti-package
                          | My Orders
                      li
                        a(href='/account')
                          i.ti-user
                          | My Profile
                // /dropdown-access
        // /row
      .search_mob_wp
        input.form-control(type='text' placeholder='Search over 10.000 products')
        input.btn_1.full-width(type='submit' value='Search')